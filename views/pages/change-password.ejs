<!DOCTYPE html>
<html lang="en">

<!-- Title -->
<title>Ana Sayfa</title>
<% include ../partials/head %>
</head>

<body>
<% include ../partials/header %>
<!-- ##### Header Area End ##### -->

    <!-- ##### Breadcrumb Area Start ##### -->
    <section class="breadcrumb-area bg-img bg-overlay" style="background-image: url(img/bg-img/40.jpg);">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="breadcrumb-content">
                        <h2>Login</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ##### Breadcrumb Area End ##### -->

    <!-- ##### Login Area Start ##### -->
    <div class="mag-login-area py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-6">
                    <div class="login-content bg-white p-30 box-shadow">
                        <!-- Section Title -->
                        <div class="section-heading">
                            <h5>Kayıt Ekranı</h5>
                        </div>

                        <form id="ChangePasswordForm" action="/changePassword" method="POST">
                            <div class="form-group">
                                <input type="password" name="oldPassword" class="form-control" id="oldPassword" placeholder="Eski şifrenizi giriniz">
                            </div>
                            <div class="form-group">
                                <input type="password" name="newPasswordOne" class="form-control" id="newPasswordOne" placeholder="Yeni şifrenizi giriniz">
                            </div>
                            <div class="form-group">
                                <input type="password" name="newPasswordTwo" class="form-control" id="newPasswordTwo" placeholder="Yeni şifrenizi tekrar giriniz">
                            </div>
                            <button id="submitChangePasswordButton" type="submit" class="btn mag-btn mt-30">Değiştir</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ##### Login Area End ##### -->

    <% include ../partials/footer %>
    
    <% include ../partials/scripts %>
</body>

</html>